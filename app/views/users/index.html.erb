<div class="page-header">
  <h1>ユーザー一覧</h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to 'Top', root_path  %></li>
  <li class="active">ユーザー一覧</li>
</ol>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>エリア</th>
      <th>プロフィール</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to image_tag(user.avatar.url(:thumb)) + user.name, user  %></td>
        <td><%= user.area %></td>
        <td><%= user.profile %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

